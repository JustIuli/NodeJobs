<%- include('./components/header.ejs') %>
<main>
    <div class="m-2">
        <%- include('./components/nav.ejs') %>
    </div>
    <div class="mx-4">
        <div class="bg-gray-50 border border-gray-200 p-10 rounded">
            <a href="/" class="inline-block text-black ml-4 mb-4"
            ><i class="fa-solid fa-arrow-left"></i> Back
            </a>
            <div
                class="flex flex-col items-center justify-center text-center"
            >
                <img
                    class="w-48 mr-6 mb-6"
                    src="<%= listing.jobLogo %>"
                    alt=""
                />

                <h3 class="text-2xl mb-2"><%= listing.jobTitle %></h3>
                <div class="text-xl font-bold mb-4"><%= listing.company %></div>
                <ul class="flex">
                    <% for (let tag of listing.jobTags) { %>
                        <li
                            class="flex items-center justify-center bg-black text-white rounded-xl py-1 px-3 mr-2 text-xs"
                        >
                        <a href="/listings/<%= tag %>"><%= tag %></a>
                        </li>
                        <% } %>
                </ul>
                <div class="text-lg my-4">
                    <i class="fa-solid fa-location-dot"></i> <%= listing.jobLocation %>
                </div>
                <div class="border border-gray-200 w-full mb-6"></div>
                <div>
                    <h3 class="text-3xl font-bold mb-4">
                        Job Description
                    </h3>
                    <div class="text-lg space-y-6">
                        <p>
                            <%= listing.jobDescription %>
                        </p>

                        <a
                            href="mailto:<%= listing.contactEmail %>"
                            class="block bg-primary text-white mt-6 py-2 rounded-xl hover:opacity-80"
                            ><i class="fa-solid fa-envelope"></i>
                            Contact Employer</a
                        >

                        <a  target="_blank"
                            href="https:<%=listing.applicationJobURL.toString()%>"
                            class="block bg-black text-white py-2 rounded-xl hover:opacity-80"
                            ><i class="fa-solid fa-globe"></i> Visit
                            Website</a
                        >
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
