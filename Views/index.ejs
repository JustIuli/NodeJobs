    <%- include('./components/header.ejs') %>
    <body class="mb-48">

        <%- include('./components/nav.ejs') %>

        <%- include('./components/hero.ejs') %>

        <main>
            <%- include('./components/searchbar.ejs') %>
          
            <% if (listings.length > 0) { %>

            <div
                class="lg:grid lg:grid-cols-2 gap-4 space-y-4 md:space-y-0 mx-4"
            >
            <% for (let listing of listings) { %>
                
                <div class="bg-gray-50 border border-gray-200 rounded p-6">
                    <div class="flex">
                        <img
                            class="hidden w-48 mr-6 md:block"
                            src="<%= listing.jobLogo %>"
                            alt=""
                        />
                        <div>
                             <a href="/listing/<%= listing._id %>" class="text-2xl">
                                <%= listing.jobTitle %>
                            </a>
                            <div class="text-xl font-bold mb-4"><%= listing.company %></div>
                            <ul class="flex">
                                <% for (let tag of listing.jobTags) { %>
                                <li
                                    class="flex items-center justify-center"
                                >
                                <a href="/listings/<%= tag %>" class="bg-black text-white rounded-xl py-1 px-3 mr-2 text-xs">
                                    <%= tag %>
                                </a>
                                </li>
                                <% } %>
                            </ul>
                            <div class="text-lg mt-4">
                                <i class="fa-solid fa-location-dot"></i> <%= listing.jobLocation %>
                            </div>
                        </div>
                    </div>
                </div>

                <% } %>
        <% } else { %>
            <h1 class="text-xl m-4 text-center">No Listings Found!</h1>
        <% } %>
        </div>
        </main>

        <%- include('./components/footer.ejs') %>

    </body>
</html>
